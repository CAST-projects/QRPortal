    "id": 1027070,
    "name": "Avoid if statements and blocks that are always TRUE or FALSE",
    "href": "AIP/quality-rules/1027070",
    "critical": false,
    "severity": 10,
    "maxWeight": 5,
    "extension": {
        "name": "com.castsoftware.dotnet",
