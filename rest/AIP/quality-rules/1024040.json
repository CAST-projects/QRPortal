    "id": 1024040,
    "name": "Always activate unlockedDeviceRequired to avoid data decryption when device is unlocked",
    "href": "AIP/quality-rules/1024040",
    "critical": true,
    "severity": 20,
    "maxWeight": 8,
    "extension": {
        "name": "com.castsoftware.android",
