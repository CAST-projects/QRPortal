    "name": "Avoid hard-coded passwords (Swift)",
    "href": "AIP/quality-rules/1055036",
    "critical": true,
    "severity": 30,
    "maxWeight": 8,
    "extension": {
        "name": "com.castsoftware.swift",
        "href": "AIP/extensions/com.castsoftware.swift"
